{
  "name": "weedgrow",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://your-username.github.io/repo-name",
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.0.0",
    "react-helmet": "^6.1.0"
  },
  "devDependencies": {
    "gh-pages": "^5.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  }
}

import { BrowserRouter as Router, Routes, Route, Link, useLocation } from "react-router-dom";
import { Helmet } from "react-helmet";
import { useState } from "react";

function App() {
  const [darkMode, setDarkMode] = useState(false);
  return (
    <Router>
      <Helmet>
        <title>WeedGrow - Best Cannabis Growing Guide</title>
        <meta name="description" content="Your complete guide to growing cannabis, with expert tips, gear recommendations, and a vibrant community." />
      </Helmet>
      
      <NavBar darkMode={darkMode} setDarkMode={setDarkMode} />
      
      <main className={`mt-16 p-4 min-h-screen transition-colors duration-300 ${darkMode ? 'bg-gray-800 text-white' : 'bg-green-50 text-black'}`}>
        <Routes>
          <Route path="/" element={<Home />} />
          <Route path="/guide" element={<GrowGuide />} />
          <Route path="/gear" element={<Gear />} />
          <Route path="/community" element={<Community />} />
        </Routes>
      </main>
    </Router>
  );
}

function NavBar({ darkMode, setDarkMode }) {
  const location = useLocation();
  const navLinks = [
    { path: "/", label: "Home" },
    { path: "/guide", label: "Grow Guide" },
    { path: "/gear", label: "Gear" },
    { path: "/community", label: "Community" },
  ];
  
  return (
    <nav className={`fixed w-full p-4 flex justify-between items-center transition-colors duration-300 ${darkMode ? 'bg-gray-900 text-white' : 'bg-green-700 text-white'}`}>
      <h1 className="text-xl font-bold"><Link to="/">WeedGrow</Link></h1>
      <div className="flex space-x-4">
        {navLinks.map(link => (
          <Link 
            key={link.path} 
            to={link.path} 
            className={`px-3 py-1 rounded-lg transition duration-200 ${location.pathname === link.path ? 'bg-yellow-500 text-black' : 'hover:bg-yellow-400 hover:text-black'}`}
          >
            {link.label}
          </Link>
        ))}
      </div>
      <button 
        onClick={() => setDarkMode(!darkMode)} 
        className="ml-4 px-3 py-1 bg-yellow-500 rounded-lg transition duration-200 hover:bg-yellow-600"
      >
        {darkMode ? 'Light Mode' : 'Dark Mode'}
      </button>
    </nav>
  );
}

function Home() {
  return (
    <div className="text-center p-10 animate-fade-in">
      <h2 className="text-4xl font-bold text-green-900 dark:text-green-300">Grow Your Future with WeedGrow</h2>
      <p className="mt-2 text-gray-700 dark:text-gray-300">Learn the best techniques to grow cannabis effectively.</p>
      <Link to="/guide" className="mt-4 inline-block bg-yellow-500 px-6 py-2 rounded-lg text-lg transition duration-200 hover:bg-yellow-600">Start Growing</Link>
    </div>
  );
}

function GrowGuide() {
  return <div className="p-4 animate-fade-in"> <h2 className="text-2xl font-semibold">Grow Guide Coming Soon...</h2> </div>;
}
function Gear() {
  return <div className="p-4 animate-fade-in"> <h2 className="text-2xl font-semibold">Gear Recommendations Coming Soon...</h2> </div>;
}
function Community() {
  return <div className="p-4 animate-fade-in"> <h2 className="text-2xl font-semibold">Community Features Coming Soon...</h2> </div>;
}

export default App;
